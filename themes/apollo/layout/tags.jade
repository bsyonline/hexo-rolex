extends partial/layout


block site_title
    != page.title + " Â· " + config.title

block description
    - var desc = page.desc || page.title + ' - ' + config.author;
    meta(name="description", content=desc)

block container
  each tags in _.groupBy(site.tags.toArray(), function(p){return page.tag})
    ul.listing
      for tag in tags
        div.tags
          a(href=url_for(tag.path))= _.split(tag.path,'\/')[1]
  script(src="js/tag.js", type="text/javascript")
block copyright
    include partial/copyright
